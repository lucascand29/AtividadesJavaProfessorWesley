package atividadesPratica06;
import javax.swing.JOptionPane;

public class Atividade03 {

	public static void main(String[] args) {
		String entrada;
		
		int quant = 0; 
		int media;
		int idade,total =0;
		
		
		do {
			entrada =JOptionPane.showInputDialog("Informe sua idade: ");
			idade = Integer.parseInt(entrada);
			
			if(idade>0) {
				for(int i = 1; i > quant; i++) {
					quant ++;
					total =+ idade;
				}
				System.out.println("quantidade: "+ quant);
				System.out.println("total: "+ total);
			}else
				JOptionPane.showMessageDialog(null,"Opção inválida. ");
			
			entrada = JOptionPane.showInputDialog("Deseja informar outra idade? (S)im ou (N)ão");
		}while(entrada.equalsIgnoreCase("s") || entrada.equalsIgnoreCase("sim"));
		
		media = total/quant;
		
		JOptionPane.showMessageDialog(null,"A media de idades: " + media);
		System.out.println("quantidade: "+ quant);
		System.out.println("total: "+ total);
		System.out.println("media: "+ media);

 
	}

}
